<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_integer_range_form" model="ir.ui.view">
        <field name="name">range.field.type.integer</field>
        <field name="model">widget.field</field>
        <field name="arch" type="xml">
            <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="salary" widget="range"/>
                </group>
            </sheet>
        </form>
        </field>
    </record>

    <record id="action_add_range_integer" model="ir.actions.act_window">
        <field name="name">employee View</field>
        <field name="res_model">widget.field</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem name="employee" id="employee_portal_menu_root"/>

    <menuitem name="employee" id="employee_portal_student" parent="employee_portal_menu_root"/>

    <menuitem name="employee Details" id="employee_portal_student_details" parent="employee_portal_student" action="test_widget.action_add_range_integer"/>

</odoo>
