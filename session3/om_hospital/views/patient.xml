<?xml version="1.0" encoding="utf-8"?>
<odoo>



<record model="ir.actions.act_window" id='open_patient_appointments' >
        <field  name="name">Appointments</field>
        <field  name="res_model">appointment.patients</field>
        <field  name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        
    </record>



    <record model="ir.ui.view" id="PatientdetailsForm">
        <field name="name">hospital.patients.form</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <form string="ManagePatients">
                <sheet>
                    <div class="">
                    <button name="%(open_patient_appointments)d" string="Appointments" type="action">
                    </button>
                </div>
                    <div class="oe_title">
                        <h1>
                            <field name='name_seq' readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                             <field name="patient_name"/>
                        </group>
                        <group>
                            <field name="patient_age"  widget="AgeRange"/>
                            <field name="age_group"/>

                        </group>
                    </group>
                <group>
                <field name="gender"/>
                <field name="notes"/>
                <field name="image"/>
                </group>

                </sheet>
                <sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="Patientdetails">
        <field name="name">hospital.patients.tree</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name_seq"/>
                <field name="patient_name"/>
                <field name="age_group"/>
                <field name="patient_age"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>




  <record model="ir.ui.view" id="AppointmentdetailsForm">
        <field name="name">appointment.patients.form</field>
        <field name="model">appointment.patients</field>
        <field name="arch" type="xml">
            <form string="ManageAppointment">
                <sheet>
                    


                   <div class="oe_title">
                        <h1>
                            <field name='name_seq' readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                             <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="patient_age"  widget="AgeRange"/>
                            <field name="appointment_date"/>

                        </group>
                    </group>
                <group>
                <field name="notes"/>
                </group>

                </sheet>
                
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="Appointmentdetails">
        <field name="name">appointment.patients.tree</field>
        <field name="model">appointment.patients</field>
        <field name="arch" type="xml">
            <tree string="Appointments">
                <field name="name_seq"/>

               <field name="patient_id"/>
                <field name="patient_age"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>




    <record model="ir.actions.act_window" id='action_patient' >
        <field  name="name">Patients</field>
        <field  name="res_model">hospital.patients</field>
        <field  name="view_mode">tree,form</field>
        
    </record>

     <record model="ir.actions.act_window" id='action_appointment_patient' >
        <field  name="name">Appointment</field>
        <field  name="res_model">appointment.patients</field>
        <field  name="view_mode">tree,form</field>
        
    </record>



<menuitem id='hospital_root' name='Hospital'/>

<menuitem id='hospital_patient' name='Patient' parent='hospital_root' action='action_patient'/>

<menuitem id='appointment_patient' name='Appointment' parent='hospital_root' action='action_appointment_patient'/>

</odoo>