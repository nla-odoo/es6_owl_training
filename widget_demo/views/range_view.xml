<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_integer_range_tree" model="ir.ui.view">
        <field name="name">range.field.type.integer.tree</field>
        <field name="model">widget.field</field>
        <field name="arch" type="xml">
            <tree>
                <field name="new_integer"/>
            </tree>
        </field>
    </record>
    <record id="add_integer_range_form" model="ir.ui.view">
        <field name="name">range.field.type.integer</field>
        <field name="model">widget.field</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Range Test">
                        <field name="new_integer" widget="range"/>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_add_range_integer" model="ir.actions.act_window">
        <field name="name">Range View</field>
        <field name="res_model">widget.field</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="range_main_menu"
    name="Range"/>
    <menuitem id="range_sub_menu"
    action="action_add_range_integer" name="Range Type" parent="widget_demo.range_main_menu"/>

</odoo>
